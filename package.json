{
  "name": "kr-actual-salary",
  "version": "0.1.1",
  "description": "연봉(만원 단위) 입력 → 월/연 실수령액 계산 CLI",
  "type": "module",
  "bin": {
    "kr-actual-salary": "dist/index.js"
  },
  "scripts": {
    "dev": "ts-node --esm src/index.ts",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean"
  },
  "keywords": [
    "salary",
    "net pay",
    "korea",
    "cli"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}