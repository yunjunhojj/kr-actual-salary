{
  "name": "kr-actual-salary",
  "version": "1.0.1",
  "description": "한국 연봉 실수령액 계산 CLI 도구 - 2025년 세법 기준",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "kr-actual-salary": "dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "ts-node --esm src/index.ts",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "prepublishOnly": "yarn build && yarn test:run"
  },
  "keywords": [
    "salary",
    "net-pay",
    "korea",
    "korean",
    "tax-calculator",
    "salary-calculator",
    "cli",
    "typescript",
    "실수령액",
    "연봉계산",
    "세금계산"
  ],
  "author": {
    "name": "윤준호",
    "email": "yunjunhojj@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/kr-actual-salary.git"
  },
  "homepage": "https://github.com/yourusername/kr-actual-salary#readme",
  "bugs": {
    "url": "https://github.com/yourusername/kr-actual-salary/issues"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
